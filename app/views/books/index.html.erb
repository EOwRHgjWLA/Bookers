<div class="index">
<h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <tr>
      <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id),method: :delete,"data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
      <% end %>
  </table>
</div>

<div class="new">
<h2>New book</h2>

  <div>
    <% flash.each do |message_type,message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
  </div>

<%= form_with model: Book.new do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  <p>body</p>
  <%= f.text_area :body %>
  </br>
  <%= f.submit 'Create Book' %>

<% end %>
</div>