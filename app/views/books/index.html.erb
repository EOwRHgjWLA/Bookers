<div class="index">
<h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <tr>
      <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id),method: :delete,"data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
      <% end %>
  </table>
</div>

<div class="new">
<h2>New book</h2>

